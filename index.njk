<style>
  h3 {
    margin-bottom: 0;
    margin-top: 2em;
    font-size: 1.1rem;
  }
  ol {
    list-style-type: none;
    padding-left: 0;
  }
  table {
    margin-left: 0.8em;
  }
  td {
    padding: 0.2em 0;
    padding-right: 1em;
  }
  .book,
  .full {
    display: inline-block;
    padding: 0.3em;
    text-align: center;
    width: 3em;
  }
  .book {
    border: 1px solid white;
  }
  .full {
    background-color: #d64550;
  }
</style>

<h2>Book your place</h2>
<ol>
  {% for day in thursdays %}
  <li>
    <h3>{{ day.value | friendlyDate }}</h3>
  </li>
  <table>
    <tr>
      <td>1pm-2pm</td>
      <td>1 Cardale Park</td>
      <td>
        <span class="book">Book</span>
      </td>
    </tr>
    <tr>
      <td>7pm–8pm</td>
      <td>Beckwith Health Club</td>
      <td>
        <span class="full">Full</span>
      </td>
    </tr>
  </table>
  {% endfor %}
</ol>

