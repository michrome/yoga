---
logoWidth: 300
---

<!DOCTYPE html>
<html lang="en-GB" class="bg-spacecadet">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/images/icon-32-blue-on-transparent.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/images/icon-16-blue-on-transparent.png"
  />
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/images/icon-180-blue-on-transparent.png"
  />
  <title>hello YOGA</title>
  <style>
    {% include "_tmp/style.css" %}
  </style>

  <header class="bg-cultured">
    <h1>
      <a href="/">
        <img
          src="/images/hello-yoga-{{ logoWidth }}-blue-on-transparent.png"
          width="{{ logoWidth }}"
          height="{{ logoWidth }}"
          class="h-56 object-scale-down px-20 w-full"
          alt="hello YOGA"
        />
      </a>
    </h1>
  </header>
  <main class="m-3 prose">
    <h2>Book your place</h2>
    {% for day in events %}
    <h3 class="">{{ day.date | dayOfWeekAndDate }}</h3>

    {% for e in day.events %}
    <button
      class="bg-darkslateblue mt-3 p-3 rounded text-center w-full hover:bg-liberty"
    >
      <span class="font-bold inline-block text-left tracking-tigher w-32"
        >{{ e.startDate | timeRange(e.endDate) }}</span
      >
      <span class="inline-block text-left w-48 tiny:text-xs tiny:w-32"
        >{{ places[e.placeId].name }}</span
      >
    </button>
    {% endfor %} {% endfor %}
  </main>
  <footer class="h-20"></footer>
</html>
